@model ProductViewModel

<div class="modal fade modalDemo popup-quickadd" id="quick_add_@Model.Id">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="header">
                <span class="icon-close icon-close-popup" data-bs-dismiss="modal"></span>
            </div>
            <div class="wrap">
                <div class="tf-product-info-item">

                    <div class="image">
                        <img id=@("productImageQuickAdd"+Model.Id) src="~/images/products/@Model.ProductVariants?.FirstOrDefault()?.CoverImageName" alt="">
                    </div>
                    <div class="content">
                        <a href="product-detail.html">@Model.Name</a>
                        <div class="tf-product-info-price">
                            <!-- <div class="price-on-sale">$8.00</div>
                            <div class="compare-at-price">$10.00</div>
                            <div class="badges-on-sale"><span>20</span>% OFF</div> -->
                            <div id=@("productPriceQuickAdd"+ Model.Id) class="price">@Model.BasePrice</div>
                        </div>
                    </div>
                </div>
                <div class="tf-product-info-variant-picker mb_15">
                    <div class="variant-picker-item">
                        <div class="variant-picker-label">
                            Color: <span class="fw-6 variant-picker-label-value">@Model.ProductVariants?.FirstOrDefault()?.ColorName</span>
                            <input type="hidden" id=@("product"+Model.Id) value="@Model.ProductVariants?.FirstOrDefault()?.Id"/>
                        </div>
                        <div class="variant-picker-values">
                            @foreach (var variant in Model.ProductVariants ?? [])
                            {
                                <input onchange="setSelectedColor(@variant.Id, @Model.Id , '@variant.CoverImageName', this)" id="values-@variant.ColorName?.ToLower()" 
                                type="radio" name="color" checked>
                                <label class="hover-tooltip radius-60" for="values-@variant.ColorName?.ToLower()" data-value="@variant.ColorName">
                                    <span class="btn-checkbox bg-color-orange"></span>
                                    <span class="tooltip">@variant.ColorName</span>
                                </label>
                            }
                        </div>
                    </div>
                    <div class="variant-picker-item">
                        <div class="variant-picker-label">
                            Size: <span class="fw-6 variant-picker-label-value">S</span>
                        </div>
                        <div class="variant-picker-values">
                            <input type="radio" name="size" id="values-s" checked>
                            <label class="style-text" for="values-s" data-value="S">
                                <p>S</p>
                            </label>
                            <input type="radio" name="size" id="values-m">
                            <label class="style-text" for="values-m" data-value="M">
                                <p>M</p>
                            </label>
                            <input type="radio" name="size" id="values-l">
                            <label class="style-text" for="values-l" data-value="L">
                                <p>L</p>
                            </label>
                            <input type="radio" name="size" id="values-xl">
                            <label class="style-text" for="values-xl" data-value="XL">
                                <p>XL</p>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="tf-product-info-quantity mb_15">
                    <div class="quantity-title fw-6">Quantity</div>
                    <div class="wg-quantity">
                        <span onclick="updateTotalQuickAdd(@Model.Id, -1)" class="btn-quantity minus-btn">-</span>
                        <input type="hidden" value="@Model.Id" id="productIdHiddenInput"/>
                        <input id=@("productQuantityQuickAdd" + Model.Id) min="1" type="number" name="number" value="1">
                        <span onclick="updateTotalQuickAdd(@Model.Id, 1)" class="btn-quantity plus-btn">+</span>
                    </div>
                </div>
                <div class="tf-product-info-buy-button">
                    <form>
                          <a onclick="getQuantity(@Model.Id, `product${@Model.Id}`)" 
                           class="tf-btn btn-fill justify-content-center fw-6 fs-16 flex-grow-1 animate-hover-btn btn-add-to-cart">
                            <span>
                                Add
                                to cart -&nbsp;
                            </span><span id=@("totalPriceQuickAdd" + Model.Id) class="tf-qty-price">$@Model.BasePrice</span>
                        </a>
                        <div class="tf-product-btn-wishlist btn-icon-action">
                            <i class="icon-heart"></i>
                            <i class="icon-delete"></i>
                        </div>
                        <a href="#compare" data-bs-toggle="offcanvas" aria-controls="offcanvasLeft"
                           class="tf-product-btn-wishlist box-icon bg_white compare btn-icon-action">
                            <span class="icon icon-compare"></span>
                            <span class="icon icon-check"></span>
                        </a>
                        <div class="w-100">
                            <a href="#" class="btns-full">Buy with <img src="~/images/payments/paypal.png" alt=""></a>
                            <a href="#" class="payment-more-option">More payment options</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

